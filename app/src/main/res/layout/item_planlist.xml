<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/item_plan_success"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="10dp"
            android:textSize="25dp"

            />
        <TextView
            android:id="@+id/item_plan_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Title"
            android:textSize="30dp"
            android:layout_weight="1"
            />
        <Button
            android:id="@+id/item_plan_editButton"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:text="Title"
            android:textSize="30dp"
            android:layout_gravity="center"
            android:background="@drawable/image_edit"
            />
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="center"
        android:background="@color/mainLine" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:gravity="end"
            android:layout_marginLeft="5dp"
            android:text="D-DAY"
            android:textSize="17dp"
            android:textStyle="bold"
            android:layout_weight="1"
            />

        <TextView
            android:id="@+id/item_plan_dDay"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:textStyle="bold"
            android:textSize="17dp"
            android:layout_weight="1"
            />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@color/mainLine" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="중요도"
            android:layout_gravity="center"
            android:gravity="end"
            android:layout_marginLeft="5dp"
            android:textStyle="bold"
            android:textSize="17dp"
            android:layout_weight="1"
            />



        <TextView
            android:id="@+id/item_plan_importance"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="중요도"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:textStyle="bold"
            android:textSize="17dp"
            android:layout_weight="1"
            />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="center"
        android:background="@color/mainLine" />

    <TextView
        android:id="@+id/item_plan_bodyText"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="내용"
        android:layout_gravity="center"
        android:layout_marginLeft="5dp"
        android:textStyle="bold"
        android:textSize="17dp"
        android:layout_weight="1"
        />
</LinearLayout>
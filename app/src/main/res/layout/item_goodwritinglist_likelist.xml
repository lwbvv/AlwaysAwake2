<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/expend"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/item_goodLike_profileImage"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        />
    <TextView
        android:id="@+id/item_goodLike_nickName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="nickName"
        android:paddingStart="20dp"
        android:textSize="20dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        />
    <Button
        android:id="@+id/item_goodLike_menu"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:background="@drawable/menu_icon"
        android:layout_marginRight="10dp"
        />
</LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="center"
        android:background="@color/mainLine" />
    <ImageView
        android:id="@+id/item_goodLike_pictureView"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="center"
        android:background="@color/mainLine" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
<ImageView
    android:id="@+id/item_goodLike_heartView"
    android:layout_width="40dp"
    android:layout_height="40dp"
    android:src="@drawable/heart"
    android:layout_marginLeft="10dp"
    />
        <ImageView
            android:id="@+id/item_goodLike_commentView"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/message"
            android:layout_marginLeft="10dp"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/item_goodLike_likeCount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="♥좋아요 x개"
        android:textSize="18dp"
        />

    <TextView
        android:id="@+id/item_goodLike_bodyText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="내용"
        android:textSize="20dp"
        />

    <TextView
        android:id="@+id/item_goodLike_commentCount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="댓글 모두보기x개"
        android:textSize="20dp"
        />

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/picture_backButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="start"
            android:background="@drawable/ic_chevron_left_black_24dp"
            android:textSize="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="125dp"
            android:text="사진 선택"
            android:textSize="30dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/picture_successButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="end"
            android:background="@color/transparentColors"
            android:text="완료"
            android:textSize="20dp" />
    </GridLayout>


    <ImageView
        android:id="@+id/picture_pictureView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        android:src="@drawable/ic_add_box_black_24dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp">

        <Button
            android:id="@+id/picture_cameraButton"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="80dp"
            android:background="@drawable/ic_camera_alt_black_24dp" />

        <Button
            android:id="@+id/picture_galleryButton"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="110dp"
            android:background="@drawable/ic_image_black_24dp" />
    </LinearLayout>
</LinearLayout>